                              <TextField fx:id="hoursWorked" maxHeight="25.0" maxWidth="125.0" onAction="#checkHoursWorked" prefHeight="25.0" prefWidth="125.0" translateX="90.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
